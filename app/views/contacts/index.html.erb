<h1>Listing contacts</h1>

<table class="table table-striped">
  <div class="row-fluid">
    <% @contacts.each do |contact| %>
        <tr>
          <td>
            <span class="span2"><%= contact.name %></span>
            <span class="span2"><%= contact.email %></span><br/>
            <span class="span10"><%= contact.subject %></span><br/>
            <span class="span10"><%= contact.content %></span><br/>
            <span class="span10"><%= link_to 'Show', contact, :class=>"btn btn-info" %>
            <%= link_to 'Edit', edit_contact_path(contact), :class=>"btn btn-success" %>
            <%= link_to 'Destroy', contact, method: :delete,
                        data: {confirm: 'Are you sure?'}, :class=>"btn btn-danger" %></span>
          </td>
        </tr>
    <% end %>
  </div>
</table>

