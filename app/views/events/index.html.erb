<h1>Listing events</h1>
<%= link_to 'New Event', new_event_path %>

<br />

<table class="table table-striped">
  <div class="row-fluid">
  <tr>
    <th class="span1">Category</th>
    <th class="span2">Name</th>
    <th class="span2">Date & Time</th>
    <th class="span2">Description</th>
    <th colspan="3">Action</th>
  </tr>
  </div>

<% @events.each do |event| %>
      <div class="row-fluid">
  <tr>
    <td class="span1"><%= event.category %></td>
    <td class="span2"><%= event.name %></td>
    <td class="span2"><%= event.date_and_time.strftime("%Y-%m-%d %H:%M") %></td>
    <td class="span2"><%= event.description %></td>
    <td class="span1"><%= link_to 'Show', event %></td>
    <td class="span1"><%= link_to 'Edit', edit_event_path(event) %></td>
    <td class="span1"><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
          </div>
<% end %>
</table>

