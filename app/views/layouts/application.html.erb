<!DOCTYPE html>
<html>
  <head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= content_for?(:title) ? yield(:title) : "Geneva Equestrian" %></title>
    <meta name="description" content="<%= content_for?(:description) ? yield(:description) : "Geneva Equestrian" %>">
    <%= stylesheet_link_tag "application", :media => "all" %>
    <%= javascript_include_tag "application" %>
    <%= csrf_meta_tags %>
    <%= yield(:head) %>
  </head>

  <body class="<%= controller_name %> <%= action_name %>">
    <header class="navbar navbar-fixed-top">
      <nav class="navbar-inner">
        <div class="container-fluid">
          <%= render 'layouts/header' %>
        </div>
      </nav>
    </header>

    <div class="container-fluid">
      <div class="row">
        <div class="span12">
          <%= render "/layouts/messages"%>
        </div>
      </div>
    </div>
	<div class="row-fluid content">
		<div class="container-fluid main_yield" >
			<div class="span2">				
				<%= render '/layouts/left_menu' %>
			</div>
			<div class="span10" id="main_content">				
				<%= yield %>
			</div>
					
		</div>				
	</div>	

    <%= render "/layouts/footer" %>

  </body>
</html>
